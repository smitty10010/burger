<h1>Burger</h1>
<div class="column">
<h2>Burgers You Want to Eat</h2>

<ul>
    {{#each burger}} {{#unless devoured}} {{> burgers/burgers-block devoured=true}} {{/unless}} {{/each}}
</ul>
</div>

<div class="column">
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burger" name="name">
        </div>


        <button type="submit" id="new">Add That Burger</button>
    </form>
</div>

<div class="column">
<h2>Burgers that were Eaten</h2>

<ul>
    {{#each burger}} {{#if devoured}} {{> burgers/burgers-block devoured=false}} {{/if}} {{/each}}
</ul>
</div>
